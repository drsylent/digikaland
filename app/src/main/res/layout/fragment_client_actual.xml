<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="hu.bme.aut.digikaland.ui.client.fragments.ClientActualFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Következő cél:"
            android:layout_marginTop="10dp"
            style="@style/StringFormatTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Állomás 1/5:"
            android:layout_marginTop="30dp"
            android:id="@+id/clientStationText"
            style="@style/StringFormatSubTitle.Actual"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cím teljesen"
            android:layout_marginTop="15dp"
            android:id="@+id/clientStationLocation"
            android:gravity="center_horizontal"
            style="@style/StringFormatLocation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cím pontosítás"
            android:id="@+id/clientStationSubLocation"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            style="@style/StringFormatSubLocation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018.02.26. 18:29"
            android:layout_marginTop="15dp"
            android:id="@+id/clientStationTime"
            android:gravity="center_horizontal"
            style="@style/StringFormatLocation"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle.Center"
            android:id="@+id/clientActualMap"
            android:layout_marginTop="50dp"
            android:text="@string/map"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle.Center"
            android:layout_marginTop="30dp"
            android:id="@+id/clientActualHelp"
            android:text="Segítség"/>

    </LinearLayout>
</ScrollView>
