<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/xs_margin"
    android:layout_marginStart="@dimen/xs_margin"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="hu.bme.aut.digikaland.ui.common.objectives.CustomAnswerObjectiveFragment">
    <!--a focusableintouchmode egy workaround, így nem kapja meg a fókuszt az edittext automatikusan-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Erre a kérdésre saját választ kell adni."
        android:id="@+id/customQuestion"
        style="@style/StringFormatQuestion"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xs_margin"
        android:id="@+id/customAnswer"
        android:inputType="text"
        android:hint="@string/answer_hint"/>

</LinearLayout>
