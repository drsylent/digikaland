<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/clientHelp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="hu.bme.aut.digikaland.ui.client.activities.ClientHelpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Következő feladat felügyelői:"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        style="@style/StringFormatLocation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:id="@+id/clientHelpObjectiveAdminContent">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A verseny felügyelői:"
        style="@style/StringFormatLocation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/clientHelpTotalAdminContent">

    </LinearLayout>

</LinearLayout>
