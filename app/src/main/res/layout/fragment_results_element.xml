<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    tools:context="hu.bme.aut.digikaland.ui.common.fragments.ResultsElementFragment">

    <TextView
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:id="@+id/resultsPosition"
        style="@style/StringFormatInformation"
        tools:text="12." />

    <TextView
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        style="@style/StringFormatInformation"
        android:id="@+id/resultsTeamName"
        android:paddingStart="@dimen/xs_margin"
        android:layout_weight="7"
        android:gravity="start"
        tools:text="Teszt csapat"/>

    <TextView
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:id="@+id/resultsPoint"
        style="@style/StringFormatInformation"
        android:layout_weight="2"
        android:gravity="end"
        tools:text="20.52p"/>

</LinearLayout>
