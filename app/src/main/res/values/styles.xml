<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StringFormatMainTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="StringFormatSubTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StringFormatSubTitle.Actual" parent="StringFormatSubTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonStyle.Center" parent="ButtonStyle">
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StringFormatCounter">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="StringFormatTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="StringFormatTitle.Small" parent="StringFormatTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StringFormatLocation">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="StringFormatSubLocation">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="StringFormatInformation">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StringFormatQuestion">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="StringFormatInformation.Center" parent="StringFormatInformation">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
